<Window x:Class="Squelette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion - Squelette"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="DarkSlateGray"
        Topmost="True">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="LOVO" 
                       FontSize="28" Foreground="White" 
                       Margin="0,0,0,30" HorizontalAlignment="Center"/>

            <TextBlock Text="Matricule" Foreground="White"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,5,0,15" Height="33" FontSize="18" FontFamily="Microsoft Sans Serif" Text=""/>

            <TextBlock Text="Mot de passe" Foreground="White"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,15" Height="33" FontFamily="Microsoft Sans Serif" FontSize="18" Password=""/>

            <Button Content="Se connecter" Click="Login_Click" Padding="10" Background="DarkCyan" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
